
<%=form_tag({:action => :crear_usuario}, :multipart => true) do%>
 <div class="row">
          <div class="large-3 text-left columns ">
                <h3>Registro</h3>
                     <%= text_field 'usuario', 'nombre', :placeholder => "Nombre" %>
                     <%= text_area 'usuario', 'email', :placeholder => "Email" %>
                     

                     <%= file_field 'usuario', 'imagen', accept: 'image/png,image/gif,image/jpeg' %>
                     <%= submit_tag 'Guardar', :class => "button [radius round]" %>
          </div>
 </div>            
<%end%>
       









